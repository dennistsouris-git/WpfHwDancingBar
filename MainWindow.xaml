<Window x:Class="DancingProgressBars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dancing Progress Bars" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Start Dancing" Click="StartDancing_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="ProgressBarContainer" VerticalAlignment="Center" HorizontalAlignment="Center">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
